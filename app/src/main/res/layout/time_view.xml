<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:fontFamily="@font/roboto"
    android:orientation="vertical"
    >

<!-- TODO: this component is a part of a list so need to create another LinearLayout component which will contain 'divider' property -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
    <ru.finashka.TimeView
        android:id="@+id/time_view"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textSize="18sp"
        app:timeEnd="2020-03-05T09:00:00"
        app:timeStart="2020-03-05T08:00:00" />

    <ru.finashka.ActivityCard
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:title="Introduce basic application" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A8C7F5"
        />

</LinearLayout>